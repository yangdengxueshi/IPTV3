<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@mipmap/bg_welcome">

    <ImageView
        android:id="@+id/iv_site_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_site_name_zh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        tools:text="健身房"/>

    <TextView
        android:id="@+id/tv_site_name_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_site_name_zh"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        tools:text="GYMNASIUM"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="15dp"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/tv_site_opening_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFDD93"
            android:textSize="20sp"
            tools:text="开放时间: 07:00-21:00"/>

        <TextView
            android:id="@+id/tv_site_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFDD93"
            android:textSize="20sp"
            tools:text="地点: 酒店5楼"/>

        <TextView
            android:id="@+id/tv_site_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            tools:text="健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-健身房位于酒店5楼-"/>
    </LinearLayout>
</RelativeLayout>
